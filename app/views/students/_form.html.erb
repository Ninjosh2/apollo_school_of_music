<%= show_errors_for(student) %>

<%= form_for student do |f| %>
  <%= f.label :name, "Name"%>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :phone_number, "Phone Number" %>
  <%= f.text_field :phone_number %>
  <br><br>
  <%= f.label :instrument, "Instrument" %>
  <%= f.text_field :instrument %>
  <br><br>
  <%= f.submit %>
<% end %>
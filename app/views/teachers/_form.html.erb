<%= show_errors_for(teacher) %>

<%= form_for teacher do |f| %>
  <%= f.label :name, "Name"%>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :email, "Email" %>
  <%= f.text_field :email %>
  <br><br>
  <%= f.label :phone_number, "Phone Number" %>
  <%= f.text_field :phone_number %>
  <br><br>
  <%= f.label :instrument, "Main Instrument" %>
  <%= f.text_field :instrument %>
  <br><br>
  <%= f.submit %>
<% end %>
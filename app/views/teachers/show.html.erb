<div class="jumbotron">

  <h1 class="display-4"><%= @teacher.name %></h1>
  <p class="lead">Email : <%= @teacher.email %>&nbsp;&nbsp;|&nbsp;&nbsp;Phone Number : <%= @teacher.phone_number %>&nbsp;&nbsp;|&nbsp;&nbsp;Main Instument : <%= @teacher.instrument %></p>
  <hr class="my-4">
  <p>
    <p><%= link_to "#{@teacher.name}'s Lessons", teacher_lessons_path(@teacher) %></p>
    <p><%= link_to "Schedule a lesson with #{@teacher.name}", new_teacher_lesson_path(@teacher) %></p>
  </p>

  <p><%= link_to 'Edit Account', edit_teacher_path(@teacher), class:"btn btn-secondary" %>
    <%= form_tag(teacher_path(@teacher), method: :delete) do %>
        <%= submit_tag "Delete Account", class:"btn btn-secondary" %>
    <% end %>
  </p>
</div>
